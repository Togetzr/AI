<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="whatsapp_flow_view_form" model="ir.ui.view">
        <field name="name">whatsapp.flow.view.form</field>
        <field name="model">whatsapp.flow</field>
        <field name="arch" type="xml">
            <form string="WhatsApp Flow">
                <header>
                    <button name="send_flow_to_whatsapp"
                        string="Sync to Whatsapp" type="object"
                        />
                    <button name="send_publish" string="Publish Flow" type="object"/>
                    
<!--                    <button name="create_test_flow" string="Create Message Flow" type="object"/>-->
                    <button name="send_test_message" string="Test Message Flow" type="object"/>
                </header>
                <sheet>
                    <label for="name"/>
                    <h1>
                        <field name="name" required="1"/>
                    </h1>
                    <group>
                        <group>
                            <field name="model_id"/>
                            <field name="phone_field"/>
                            <field name="button_name"/>
                            <field name="screen_name"/>
                            <field name="flow_action"/>
                            <field name="call_method_after_response"/>
                            <field name="reply_with_template"/>
                            <field name="reply_with_multiple_templates" widget="many2many_tags"/>
<!--                            <field name="platform_domain"/>-->
<!--                            <field name="data_uri_domain"/>-->
<!--                            <field name="endpoint_uri"/>-->
<!--                            <field name="send_summery"/>-->
                        </group>
                        <group>
                            <field name="categories"/>
                            <field name="flow_attachment"/>
                            <field name="company_id"/>
                            <field name="whatsapp_flow_id"/>
                            <field name="testing_category_number"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Body">
                            <field name="body"/>
                        </page>
                        <page string="Reponse Code">
                            <field name="code" widget="ace"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="whatsapp_flow_view_tree" model="ir.ui.view">
        <field name="name">whatsapp.flow.view.tree</field>
        <field name="model">whatsapp.flow</field>
        <field name="arch" type="xml">
            <tree string="WhatsApp Template">
                <field name="name"/>
                <field name="categories"/>
            </tree>
        </field>
    </record>

    <record id="whatsapp_flow_action" model="ir.actions.act_window">
        <field name="name">WhatsApp Flow</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">whatsapp.flow</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                Create or sync WhatsApp Templates.
            </p>
        </field>
    </record>
</odoo>
