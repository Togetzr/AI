<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <record id="sale_order_send_confirmation_wa_message" model="whatsapp.template">
            <field name="name">Sale Confirmation Whatsapp Template</field>
            <field name="mess_type">interactive</field>
            <field name="template_name">sale_order_send_confirmation_wa_message</field>
            <field name="model_id" eval="ref('sale.model_sale_order')"/>
            <field name="phone_field">partner_id.phone_mobile_search</field>
        </record>
        
        <record id="first_sale_variable" model="whatsapp.template.variable">
            <field name="line_type">body</field>
            <field name="name">{{1}}</field>
            <field name="demo_value">SO001</field>
            <field name="field_type">field</field>
            <field name="field_name">name</field>
            <field name="wa_template_id" eval="ref('tz_whatsapp_commerce.sale_order_send_confirmation_wa_message')"/>
        </record>
        
        <record id="second_sale_variable" model="whatsapp.template.variable">
            <field name="line_type">body</field>
            <field name="name">{{2}}</field>
            <field name="demo_value">100</field>
            <field name="field_type">field</field>
            <field name="field_name">amount_total</field>
            <field name="wa_template_id" eval="ref('tz_whatsapp_commerce.sale_order_send_confirmation_wa_message')"/>
        </record>
        
        <record id="tz_whatsapp_commerce.sale_order_send_confirmation_wa_message" model="whatsapp.template">
            <field name="body">Bonjour,

    Nous avons bien reçu votre commande. Votre numéro de commande est {{1}} pour un montant de {{2}} EUR.

    Bien cordialement,
            </field>
        </record>
    
        <record id="mpm_wa_message" model="whatsapp.template">
            <field name="name">MPM Whatsapp Template</field>
            <field name="mess_type">interactive</field>
            <field name="template_name">mpm_wa_message</field>
            <field name="model_id" eval="ref('sale.model_sale_order')"/>
            <field name="phone_field">partner_id.phone_mobile_search</field>
            <field name="body">Add MPM products.</field>
            <field name="header_type">text</field>
            <field name="header_text">Test mpm header text</field>
            <field name="trigger_word">Catalogue</field>
            <field name="default_template" eval="True"/>
            <field name="is_mpm_template" eval="True"/>
        </record>
        
        <record id="mpm_button" model="whatsapp.template.button">
            <field name="name">View items</field>
            <field name="button_type">MPM</field>
            <field name="wa_template_id" eval="ref('tz_whatsapp_commerce.mpm_wa_message')"/>
        </record>
    
    </data>
</odoo>
