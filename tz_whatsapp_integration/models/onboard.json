{
  "version": "3.1",
  "screens": [
    {
      "id": "ONBOARD",
      "title": "Onboarding",
      "data": {
      },
      "terminal": true,
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "Form",
            "name": "flow_path",
            "children": [
              {
                "type": "TextInput",
                "name": "name",
                "label": "Nom de l’entreprise",
                "required": true,
                "input-type": "text"
              },
              {
                "type": "TextInput",
                "name": "activity_commercial",
                "label": "Activité commerciale",
                "required": false,
                "input-type": "text"
              },
              {
                "type": "TextInput",
                "name": "email",
                "label": "E-mail professionnel",
                "required": false,
                "input-type": "email"
              },
              {
                "type": "TextArea",
                "name": "company_address",
                "label": "Adresse de l'société",
                "required": true
              },
              {
                "type": "TextInput",
                "name": "contact_name",
                "label": "Nom du gestionnaire",
                "required": true,
                "input-type": "text"
              },
              {
                "type": "TextInput",
                "name": "mobile",
                "label": "Téléphone",
                "required": true,
                "input-type": "number"
              },
              {
                "type": "TextInput",
                "name": "technology_using",
                "label": "Technologie Utilisant",
                "required": false,
                "input-type": "text"
              },
              {
                "type": "TextInput",
                "name": "technology_intrested",
                "label": "Technologie Intéressée",
                "required": true,
                "input-type": "text"
              },
              {
                "type": "Footer",
                "label": "Continue",
                "on-click-action": {
                  "name": "complete",
                  "payload": {
                    "name":"${form.name}",
                    "activity_commercial":"${form.activity_commercial}",
                    "company_address":"${form.company_address}",
                    "contact_name":"${form.contact_name}",
                    "mobile": "${form.mobile}",
                    "email": "${form.email}",
                    "technology_using": "${form.technology_using}",
                    "technology_intrested":"${form.technology_intrested}"
                  }
                }
              }
            ]
          }
        ]
      }
    }
  ]
}

