<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="whatsapp_template_button_view_tree" model="ir.ui.view">
        <field name="name">whatsapp.template.button.view.tree</field>
        <field name="model">whatsapp.template.button</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="wa_template_id"/>
                <field name="call_number"/>
                <field name="url_type"/>
                <field name="website_url"/>
                <field name="button_type"/>
            </tree>
        </field>
    </record>
    <record id="whatsapp_template_button_view_form" model="ir.ui.view">
        <field name="name">whatsapp.template.button.view.form</field>
        <field name="model">whatsapp.template.button</field>
        <field name="arch" type="xml">
            <form string="Template Button">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="wa_template_id"/>
                        </group>
                        <group>
                            <field name="call_number"/>
                            <field name="url_type"/>
                            <field name="website_url"/>
                            <field name="button_type"/>
                        </group>
                    </group>
                    <group invisible="button_type != 'quick_reply'">
                        <field name="replied_with_template"/>
                        <field name="replied_with_flow"/>
                        <field name="replied_with_message"/>
                        <field name="call_method_after_click"/>
                    </group>
                    <notebook>
                        <page string="Python Code">
                            <field name="code" widget="ace"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
