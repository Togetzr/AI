<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="whatsapp_trigger_message_view_form" model="ir.ui.view">
        <field name="name">whatsapp.trigger_message.view.form</field>
        <field name="model">whatsapp.trigger.message</field>
        <field name="arch" type="xml">
            <form string="WhatsApp Trigger Message">
                <sheet>
                    <label for="name"/>
                    <h1>
                        <field name="name" required="1"/>
                    </h1>
                    <group>
                        <field name="company_id"/>
                        <field name="flow_id"/>
                        <field name="template_id"/>
                        <field name="mpm_template"/>
                        <field name="message"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="whatsapp_trigger_message_view_tree" model="ir.ui.view">
        <field name="name">whatsapp.trigger_message.view.tree</field>
        <field name="model">whatsapp.trigger.message</field>
        <field name="arch" type="xml">
            <tree string="WhatsApp Trigger Message">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="whatsapp_trigger_message_action" model="ir.actions.act_window">
        <field name="name">WhatsApp Trigger Message</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">whatsapp.trigger.message</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                Create or sync WhatsApp Trigger Message.
            </p>
        </field>
    </record>
</odoo>
